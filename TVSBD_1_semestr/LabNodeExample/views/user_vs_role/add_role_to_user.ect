<% extend './page.ect' %>
<form action="/save_role_to_user" method="post">
    <input type="hidden" name="userId" value="<%- @user.id %>">
    <div><select id="role" name="role">
            <% for role in @roles : %>
                <option value="<%= role.id %>">
                    <div><%= role.role_name %></div>
                </option>
            <% end %>
        </select>
    </div>
    <button>Сохранить</button>
</form>
